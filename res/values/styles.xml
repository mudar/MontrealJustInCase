<resources>

    <style name="BigButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="AuCasOu.ActionBar.TitleTextStyle" parent="TextAppearance.Widget.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">@dimen/paddingSmall</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:textColor">@color/dashboard_text</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AboutSeparator">
<!--         <item name="android:layout_margin">@dimen/textSizeXLarge</item> -->
        <item name="android:background">@color/separator_about</item>
        <item name="android:layout_marginTop">@dimen/bodyPaddingLarge</item>
        <item name="android:layout_marginBottom">@dimen/bodyPaddingLarge</item>
        <!-- <item name="android:background">@drawable/about_separator_background</item> -->

    </style>

    <style name="ListItem">
        <item name="android:background">@drawable/list_selector</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:paddingLeft">@dimen/paddingMedium</item>
        <item name="android:paddingRight">@dimen/paddingMedium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ListItemTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/body_text_1</item>
    </style>

    <style name="ListItemSummary" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/body_text_2</item>
    </style>

    <style name="ListItemDistance" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:gravity">right</item>
    </style>

</resources>